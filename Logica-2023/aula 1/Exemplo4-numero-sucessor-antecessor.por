programa
{	
	funcao inicio()
	{
		inteiro numero
		
		escreva("Número")
		leia(numero)

		// incrementa o valor original da variavel
		numero++
		
		escreva("Sucessor: ", numero+1, "\n")
		escreva("Antecessor: ", numero-1)
	}
}
